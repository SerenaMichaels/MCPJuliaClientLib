# MCP Julia Client Configuration
# Copy this file to .env and update with your actual values

# Julia Configuration
JULIA_PATH=julia
# Linux/macOS: JULIA_PATH=/usr/local/bin/julia
# Windows: JULIA_PATH=C:\Users\%USERNAME%\AppData\Local\Programs\Julia\Julia-1.11.2\bin\julia.exe
# Custom: JULIA_PATH=/opt/julia/bin/julia

# MCP Server Configuration
MCP_SERVER_DIR=/opt/mcp-julia-server
# Windows: MCP_SERVER_DIR=C:\mcp-julia-server
# Development: MCP_SERVER_DIR=/home/user/MCPJuliaServer

# PostgreSQL Configuration (for server connection)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres

# Client Configuration
MCP_CLIENT_TIMEOUT=30
MCP_CLIENT_LOG_LEVEL=INFO
MCP_CLIENT_RETRY_COUNT=3

# Development Settings (optional)
MCP_DEV_MODE=false
MCP_DEBUG_COMMUNICATION=false